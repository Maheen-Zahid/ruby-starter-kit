<main>
  <div class="container">
    <div class="card hero">
            <%= form_with url: "/users", method: :post do |form| %>
                <div class="d-flex flex-col items-start mb-1">
                    <%= form.label :given_name %>
                    <%= form.text_field :given_name, class:"w-100 input", required: true %>
                </div>
                <div class="d-flex flex-col items-start mb-1">
                    <%= form.label :family_name %>
                    <%= form.text_field :surname, class:"w-100 input", required: true %>
                </div>
                <div class="d-flex flex-col items-start mb-1">
                    <%= form.label :email %>
                    <%= form.text_field :email, class:"w-100 input", required: true %>
                </div>
                <div>
                    <%= form.submit "Submit", class:"btn" %>
                </div> 
            <% end %>
    </div>
  </div>
</main>